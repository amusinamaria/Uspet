<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_okean"
    tools:context="mary.uspet.AchivkiActivity">

    <TextView
        android:id="@+id/noAchivki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="@string/noAchivki"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/achivkiRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingBottom="40dp"
        android:paddingTop="15dp"
        tools:listitem="@layout/achivka_item"/>

    <ImageView
        android:id="@+id/achivkiIconButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-40dp"
        android:onClick="onClickBackToCards"
        android:src="@drawable/dlinnyyazik" />
</RelativeLayout>
